<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../css/index.css">
    <title>Mongodb6</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-4 p-5 bg-secondary">
                <form action="/savedata" method="post" enctype="multipart/form-data">

                    <input type="hidden" name="id" id="id" value="<%= udata.id%>">
                    <label for=""><b>name:-</b></label>
                    <input type="text" name="name" value="<%= udata.name %>"><br><br>

                    <label for=""><b>Age:-</b></label>
                    <input type="number" name="age" value="<%= udata.age %>"><br><br>

                    <label for=""><b>email:-</b></label>
                    <input type="email" name="email" value="<%= udata.email %>"><br><br>

                    <label for=""><b>Address:-</b></label>
                    <input type="text" name="address" value="<%= udata.address %>"><br><br>

                    <label for=""><b>Image:-</b></label>
                    <input type="file" name="image"><br><br>

                    <input type="submit" class="btn btn-primary" value="Save" name="save">
                </form>
            </div>
            <div class="col-8 p-5 bg-warning  d-flex justify-content-center align-items-center">
                <br><br>
                <table border="2" class="table table-striped">
                    <tr>
                        <td><center><b>id</b></center></td>
                        <td><center><b>Name</b></center></td>
                        <td><center><b>Age</b></center></td>
                        <td><center><b>Email</b></center></td>
                        <td><center><b>Address</b></center></td>
                        <td><center><b>Image</b></center></td>
                        <td><center><b>Action</b></center></td>
                    </tr>
                    <% data.forEach((i)=>{ %>
                        <tr>
                            <td><center>
                                <%= i._id %>
                            </center>
                            </td>
                            <td><center>
                                <%= i.name %>
                            </center>
                            </td>
                            <td><center>
                                <%= i.age %>
                            </center>
                            </td>
                            <td><center>
                                <%= i.email %>
                            </center>
                            </td>
                            <td><center>
                                <%= i.address %>
                            </center>
                            </td>
                            <td><center>
                                <img src="../<%= i.image%>" alt="User image" height="50px" width="50px" />
                            </center>
                            </td>
                            <td><center><a class="btn btn-success" href="/edit/<%= i.id %>">Edit</a> <a class="btn btn-danger" href="/del/<%= i.id%>">Delete</a></center></td>
                        </tr>
                        <%}) %>     
                </table>
            </div>
        </div>
    </div>
</body>

</html>